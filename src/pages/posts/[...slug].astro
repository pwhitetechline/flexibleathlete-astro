---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
    const blogEntries = await getCollection('posts');
    return blogEntries.map(entry => ({
        params: { slug: entry.slug }, props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
    <header class="post-header">
        <div class="header-content">
            <h1>{entry.data.title}</h1>
            <div class="post-meta">
                <div class="meta-info">
                    <div class="author-date">
                        <time datetime={entry.data.date}>
                            {new Date(entry.data.date).toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric'
                            })}
                        </time>
                        <span class="author">By {entry.data.author}</span>
                    </div>
                    <div class="meta-details">
                        {entry.data.category && 
                            <div class="category">
                                <span class="meta-label">Category:</span>
                                <a href={`/category/${entry.data.category.toLowerCase()}`}>{entry.data.category}</a>
                            </div>
                        }
                        {entry.data.tags && entry.data.tags.length > 0 && 
                            <div class="tags">
                                <span class="meta-label">Tags:</span>
                                {entry.data.tags.map(tag => (
                                    <a href={`/tag/${tag.toLowerCase()}`} class="tag">#{tag}</a>
                                ))}
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>
    <article class="blog-post">
        <div class="post-content">
            <Content />
        </div>
    </article>
</Layout>

<style>
    .post-header {
        background: linear-gradient(135deg, var(--color-primary) 0%, #6c5ce7 100%);
        color: white;
        padding: 2.5rem 0;
        width: 780px;
        margin: 0 auto;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .header-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .blog-post {
        max-width: 800px;
        margin: 0 auto;
        margin-top: 2rem;
    }

    .post-content {
        padding: 0 2rem;
    }

    h1 {
        font-size: 2.2rem;
        line-height: 1.2;
        margin: 0 0 1.5rem;
        font-weight: 700;
    }

    .post-meta {
        font-size: 0.95rem;
    }

    .meta-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .author-date {
        display: flex;
        gap: 1rem;
        align-items: center;
        color: rgba(255, 255, 255, 0.9);
    }

    .author::before {
        content: "â€¢";
        margin-right: 1rem;
        opacity: 0.7;
    }

    .meta-details {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        align-items: center;
    }

    .meta-label {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        margin-right: 0.5rem;
    }

    .category a {
        color: white;
        text-decoration: none;
        background: rgba(255, 255, 255, 0.2);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        transition: background 0.3s ease;
    }

    .category a:hover {
        background: rgba(255, 255, 255, 0.3);
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .tag {
        color: white;
        text-decoration: none;
        font-size: 0.85rem;
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .tag:hover {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .post-header {
            padding: 2rem 1.5rem;
            width: 90%;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .meta-info {
            gap: 0.75rem;
        }

        .meta-details {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .post-content {
            padding: 0 1.5rem;
        }
    }
</style>
