---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
    <div class="contact-container">
        <h2>Contact Us</h2>
        <div class="contact-content">
            <div class="contact-info">
                <h3>Get in Touch</h3>
                <p>Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
                <div class="info-item">
                    <strong>Email:</strong>
                    <a href="mailto:pwhite.xm@gmail.com">pwhite.xm@gmail.com</a>
                </div>
                <div class="info-item">
                    <strong>Phone:</strong>
                    <a href="tel:9198861861">(919) 886-1861</a>
                </div>
                <div class="info-item">
                    <strong>Address:</strong>
                    <address>
                        2650 Bahia Vista St., Suite 301<br>
                        Sarasota, FL 34239
                    </address>
                </div>
            </div>
            
            <form action="https://api.web3forms.com/submit" method="POST" class="contact-form">
                <input type="hidden" name="access_key" value="1f092af7-b9ac-42e2-9147-f6924357f738">
                <input type="hidden" name="subject" value="New Contact Form Submission from Flexible Athlete">
                <input type="hidden" name="from_name" value="Flexible Athlete Website">
                <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
                
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="message-subject">Subject</label>
                    <input type="text" id="message-subject" name="message-subject" required>
                </div>
                
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" required></textarea>
                </div>

                <div id="result" class="result-message"></div>
                
                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>
</Layout>

<style>
    .contact-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
    }

    .contact-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    .contact-info {
        padding: 2rem;
        background: #f9f9f9;
        border-radius: 8px;
    }

    .info-item {
        margin: 1rem 0;
    }

    .info-item a {
        color: #4169E1;
        text-decoration: none;
    }

    .contact-form {
        display: grid;
        gap: 1.5rem;
    }

    .form-group {
        display: grid;
        gap: 0.5rem;
    }

    label {
        color: #666;
    }

    input, textarea {
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-family: inherit;
    }

    button {
        background: #4169E1;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    button:hover {
        background: #357abd;
    }

    @media (max-width: 768px) {
        .contact-content {
            grid-template-columns: 1fr;
        }
    }

    .result-message {
        margin: 1rem 0;
        padding: 1rem;
        border-radius: 4px;
        display: none;
    }

    .result-message.success {
        display: block;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .result-message.error {
        display: block;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<script>
    const form = document.querySelector('.contact-form');
    const result = document.getElementById('result');

    if (form) {
        document.addEventListener('submit', async (e) => {
            if (e.target.classList.contains('contact-form')) {
                e.preventDefault();
                result.style.display = 'none';

                try {
                    const formData = new FormData(e.target);
                    const response = await fetch(e.target.action, {
                        method: 'POST',
                        body: formData
                    });

                    const data = await response.json();

                    if (response.status === 200) {
                        result.innerHTML = 'Thank you for your message. We will get back to you soon!';
                        result.classList.add('success');
                        e.target.reset();
                    } else {
                        result.innerHTML = data.message || 'Something went wrong. Please try again.';
                        result.classList.add('error');
                    }
                } catch (error) {
                    result.innerHTML = 'Something went wrong. Please try again.';
                    result.classList.add('error');
                }

                result.style.display = 'block';
            }
        });
    }
</script>
